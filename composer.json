{
    "name": "tmogdans/laravel-crypto-shredder",
    "description": "Easy crypto shredding for your laravel models",
    "keywords": [
        "mayflower",
        "crypto shredding",
        "laravel-crypto-shredder"
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Tmogdans\\LaravelCryptoShredder\\": "src/",
            "Tmogdans\\LaravelCryptoShredder\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Tobias Mogdans",
            "email": "tobias.mogdans@mayflower.de",
            "homepage": "https://mayflower.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "check-style": "phpcs --standard=PSR12 src tests",
        "fix-style": "phpcbf  --standard=PSR12 src tests",
        "phpstan": "phpstan --no-progress",
        "phpunit": "XDEBUG_MODE=coverage phpunit --coverage-text"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tmogdans\\LaravelCryptoShredder\\CryptoShredderServiceProvider"
            ]
        }
    }
}
